<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="stuff ll"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status2"
        app:layout_constraintStart_toStartOf="@+id/imageview_status2"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status2" />

    <ImageView
        android:id="@+id/imageview_status3"
        android:layout_width="91dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_status4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_status2"
        app:layout_constraintTop_toTopOf="@+id/imageview_status1"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <ImageView
        android:id="@+id/imageview_status4"
        android:layout_width="91dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_status3"
        app:layout_constraintTop_toTopOf="@+id/imageview_status1"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <ImageView
        android:id="@+id/imageview_status2"
        android:layout_width="91dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_status3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_status1"
        app:layout_constraintTop_toTopOf="@+id/imageview_status1"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <TextView
        android:id="@+id/textview_movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Hello World!"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_moviePoster" />

    <TextView
        android:id="@+id/textview_movieTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="jfjfjhfgbnfk"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textview_movieName"
        app:layout_constraintTop_toBottomOf="@+id/textview_movieName" />

    <ImageView
        android:id="@+id/imageview_moviePoster"
        android:layout_width="516dp"
        android:layout_height="328dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_moviePoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_moviePoster"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageview_status1"
        android:layout_width="91dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_status2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <TextView
        android:id="@+id/textview_status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="fff"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status1"
        app:layout_constraintStart_toStartOf="@+id/imageview_status1"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status1" />

    <TextView
        android:id="@+id/textview_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ytre"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status3"
        app:layout_constraintStart_toStartOf="@+id/imageview_status3"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status3" />

    <TextView
        android:id="@+id/textview_status3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="a long one"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status4"
        app:layout_constraintStart_toStartOf="@+id/imageview_status4"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status4" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_status1" />

    <TextView
        android:id="@+id/textview_plotSummaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Plot Summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/textview_plotSummary"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="dsjfsfligupfefiupsiohejdgfjgijlsdfkkjvnvcxnxkdfurijouuorsotohdhhfllkjlkjlkjlkjdsfjkljldsnfdsnfsd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview_plotSummaryTitle"
        app:layout_constraintTop_toBottomOf="@+id/textview_plotSummaryTitle" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>