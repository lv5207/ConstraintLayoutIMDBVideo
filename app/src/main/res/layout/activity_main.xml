<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141313"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="stuff ll"
        android:textColor="#F6EAEA"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status2"
        app:layout_constraintStart_toStartOf="@+id/imageview_status2"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status2" />

    <ImageView
        android:id="@+id/imageview_status3"
        android:layout_width="91dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_status4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_status2"
        app:layout_constraintTop_toTopOf="@+id/imageview_status1"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <ImageView
        android:id="@+id/imageview_status4"
        android:layout_width="91dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_status3"
        app:layout_constraintTop_toTopOf="@+id/imageview_status1"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <ImageView
        android:id="@+id/imageview_status2"
        android:layout_width="91dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_status3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageview_status1"
        app:layout_constraintTop_toTopOf="@+id/imageview_status1"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <ImageView
        android:id="@+id/imageview_moviePoster"
        android:layout_width="516dp"
        android:layout_height="328dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/vmgicxw6biqlqdh77htpbfdab0u_scaled" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="124dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_moviePoster"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/imageview_moviePoster"
        tools:srcCompat="@drawable/weaponsthmb" />

    <ImageView
        android:id="@+id/imageview_status1"
        android:layout_width="91dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_status2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <TextView
        android:id="@+id/textview_status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="fff"
        android:textColor="#F6EAEA"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status1"
        app:layout_constraintStart_toStartOf="@+id/imageview_status1"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status1" />

    <TextView
        android:id="@+id/textview_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ytre"
        android:textColor="#F6EAEA"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status3"
        app:layout_constraintStart_toStartOf="@+id/imageview_status3"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status3" />

    <TextView
        android:id="@+id/textview_status3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="a long one"
        android:textColor="#F6EAEA"
        app:layout_constraintEnd_toEndOf="@+id/imageview_status4"
        app:layout_constraintStart_toStartOf="@+id/imageview_status4"
        app:layout_constraintTop_toBottomOf="@+id/imageview_status4" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_status1" />

    <TextView
        android:id="@+id/textview_plotSummaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Plot Summary"
        android:textColor="#F6EAEA"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/textview_plotSummary"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="dsjfsfligupfefiupsiohejdgfjgijlsdfkkjvnvcxnxkdfurijouuorsotohdhhfllkjlkjlkjlkjdsfjkljldsnfdsnfsd"
        android:textColor="#D1C4C4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/textview_plotSummaryTitle" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ImageView
        android:id="@+id/imageview_starRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@id/barrier2"
        app:layout_constraintTop_toBottomOf="@+id/imageview_moviePoster"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textView_starRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.8"
        android:textColor="#F6EAEA"
        app:layout_constraintEnd_toEndOf="@+id/imageview_starRating"
        app:layout_constraintStart_toStartOf="@+id/imageview_starRating"
        app:layout_constraintTop_toBottomOf="@+id/imageview_starRating" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="textview_movieName,textview_movieTagline" />

    <TextView
        android:id="@+id/textview_movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Hello World!"
        android:textColor="#F6EAEA"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageview_moviePoster" />

    <TextView
        android:id="@+id/textview_movieTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="jfjfjhfgbnfk fjjfkdlssk"
        android:textColor="#F6EAEA"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textview_movieName"
        app:layout_constraintTop_toBottomOf="@+id/textview_movieName" />

</androidx.constraintlayout.widget.ConstraintLayout>